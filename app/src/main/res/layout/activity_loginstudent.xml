<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Main Card Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- App Logo -->


                <!-- Title -->
                <TextView
                    android:id="@+id/auth_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/student_portal"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03"
                    android:layout_marginBottom="24dp"/>

                <!-- Username Field -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/username"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/colorPrimary1"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/colorPrimary1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="16dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textHint"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        tools:text="@string/username"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Field -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/password"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/colorPrimary"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/colorPrimary"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="16dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textHint"
                        android:inputType="textPassword"
                        android:imeOptions="actionDone"
                        tools:text="password123"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Registration Fields Container (Initially Hidden) -->
                <LinearLayout
                    android:id="@+id/register_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Roll Number Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/roll_number"
                        app:boxStrokeColor="@color/colorPrimary"
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/ic_id_card"
                        app:startIconTint="@color/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/roll_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="16dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textHint"
                            android:inputType="textCapCharacters"
                            tools:text="STU2023001"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Department Dropdown -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/department"
                        app:boxStrokeColor="@color/colorPrimary"
                        app:endIconMode="dropdown_menu"
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/ic_department"
                        app:startIconTint="@color/colorPrimary">

                        <AutoCompleteTextView
                            android:id="@+id/department_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="16dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textHint"
                            android:focusable="false"
                            tools:text="Computer Science"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Year Selection -->
                    <TextView
                        android:id="@+id/year_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/academic_year"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"/>

                    <RadioGroup
                        android:id="@+id/year_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/year_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/year_1"
                            android:textColor="@color/textPrimary"
                            app:buttonTint="@color/colorPrimary"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/year_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/year_2"
                            android:textColor="@color/textPrimary"
                            app:buttonTint="@color/colorPrimary"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/year_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/year_3"
                            android:textColor="@color/textPrimary"
                            app:buttonTint="@color/colorPrimary"/>
                    </RadioGroup>
                </LinearLayout>

                <!-- Login Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="8dp"
                    android:elevation="2dp"
                    android:paddingVertical="14dp"
                    android:text="@string/login"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    style="@style/Widget.MaterialComponents.Button"/>

                <!-- Register Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/registerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/colorSecondary"
                    app:cornerRadius="8dp"
                    android:elevation="2dp"
                    android:paddingVertical="14dp"
                    android:text="@string/register"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.Button"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="24dp"
                    android:background="@color/dividerColor"/>

                <!-- Auth Mode Toggle -->
                <TextView
                    android:id="@+id/switch_auth_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/switch_to_register"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>